<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.oss_net.choloeksathe.activities.driver.DriverCarInfoUpdateActivity"
    tools:showIn="@layout/activity_driver_car_info_update">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/colorPrimary">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/carImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher_round"
                android:layout_gravity="center"
                android:layout_margin="@dimen/mp_10"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorImageBorder"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/mp_5"
                android:layout_toEndOf="@id/carImage"
                android:background="@drawable/drawable_rectangle"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/carName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawablePadding="@dimen/mp_3"
                    android:drawableStart="@drawable/ic_action_full_name"
                    android:gravity="center_vertical"
                    android:hint="@string/full_name"
                    android:inputType="textCapWords"
                    android:lines="1"
                    android:padding="@dimen/mp_5"
                    android:textSize="15sp" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:background="@android:color/darker_gray" />

                <EditText
                    android:id="@+id/carModel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawablePadding="@dimen/mp_3"
                    android:drawableStart="@drawable/ic_action_mobile_number"
                    android:gravity="center_vertical"
                    android:hint="@string/mobile_number"
                    android:lines="1"
                    android:padding="@dimen/mp_5"
                    android:textSize="15sp" />
            </LinearLayout>
        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mp_10"
        android:layout_marginStart="@dimen/mp_5"
        android:layout_marginEnd="@dimen/mp_5"
        android:orientation="vertical"
        android:background="@drawable/drawable_rectangle">

        <EditText
            android:id="@+id/carOwnerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mp_10"
            android:drawablePadding="@dimen/mp_10"
            android:drawableStart="@drawable/ic_action_full_name"
            android:gravity="center_vertical"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:background="@null"
            android:padding="@dimen/mp_10" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"/>

        <EditText
            android:id="@+id/carOwnerContactNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mp_10"
            android:drawablePadding="@dimen/mp_10"
            android:drawableStart="@drawable/ic_action_mobile_number"
            android:gravity="center_vertical"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:background="@null"
            android:padding="@dimen/mp_10" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"/>

        <EditText
            android:id="@+id/carDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mp_10"
            android:drawablePadding="@dimen/mp_10"
            android:drawableStart="@drawable/ic_action_mobile_number"
            android:gravity="center_vertical"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:background="@null"
            android:padding="@dimen/mp_10" />


        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"/>


        <EditText
            android:id="@+id/cardriverName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mp_10"
            android:drawablePadding="@dimen/mp_10"
            android:drawableStart="@drawable/ic_action_full_name"
            android:gravity="center_vertical"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:background="@null"
            android:padding="@dimen/mp_10" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"/>

        <EditText
            android:id="@+id/cardriverContactNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mp_10"
            android:drawablePadding="@dimen/mp_10"
            android:drawableStart="@drawable/ic_action_mobile_number"
            android:gravity="center_vertical"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:background="@null"
            android:padding="@dimen/mp_10" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"/>


        <EditText
            android:id="@+id/cardriverRegNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mp_10"
            android:drawablePadding="@dimen/mp_10"
            android:drawableStart="@drawable/ic_action_mobile_number"
            android:gravity="center_vertical"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:background="@null"
            android:padding="@dimen/mp_10" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"/>


        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/carType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:spinnerMode="dropdown"
            android:prompt="@string/gender"
            android:layout_marginBottom="@dimen/mp_5">

        </android.support.v7.widget.AppCompatSpinner>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"/>

        <EditText
            android:id="@+id/carNumberOfSit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mp_10"
            android:drawablePadding="@dimen/mp_10"
            android:drawableStart="@drawable/ic_action_mobile_number"
            android:gravity="center_vertical"
            android:inputType="number"
            android:lines="1"
            android:background="@null"
            android:padding="@dimen/mp_10" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/mp_10">
            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/carActiveStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_weight="1"
                android:text="@string/active"/>
            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/carACAvailableStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_weight="1"
                android:text="@string/ac_available"/>
        </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
